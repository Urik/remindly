		"@types/web-push": "^3.6.3",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.10.2",
		"postcss": "^8.4.38",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"tsx": "^4.10.5",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"dependencies": {
